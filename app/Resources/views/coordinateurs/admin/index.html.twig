{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - coordinateurs index
{% endblock %}

{% block panel_head %}
    Gestion des coordinateurs
{% endblock %}

{% block aside %}
    <div class="form-group">
        <a class="btn btn-primary"href="{{ path('coordinateurs_new') }}">
            <i class="fa fa-plus"></i>
            Ajouter coordinateur
        </a>
    </div>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12 table-responsive">

            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Codepostal</th>
                        <th>Ville</th>
                        <th>Email</th>
                        <th width = "140px">List</th>
                    </tr>
                </thead>
                <tbody>
                    {% for coordinateur in coordinateurs %}
                        <tr>
                            <td>{{ coordinateur.nom }}</td>
                            <td>{{ coordinateur.codepostal }}</td>
                            <td>{{ coordinateur.ville }}</td>
                            <td>{{ coordinateur.email }}</td>
                            <td>   
                                <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('coordinateurs_by_id_delete', { 'id': coordinateur.id}) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a title='show' class="btn btn-success btn-sm" href="{{ path('coordinateurs_show', { 'id': coordinateur.id }) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('coordinateurs_edit', { 'id': coordinateur.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}

