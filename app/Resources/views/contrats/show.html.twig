{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} - contrat
{% endblock %}

{% block body %}

<header class="panel-heading">
    <h2> Contrats</h2>
</header>
<div class="panel-body">

    <form class="form form-vertical">
        <fieldset>            <div class="control-group">
                <label class="col-sm-2 control-label">Id</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ contrat.id }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Datedebut</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{% if contrat.dateDebut %}{{ contrat.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Datedebut</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{% if contrat.datedebut %}{{ contrat.datedebut|date('Y-m-d') }}{% endif %}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Datefin</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{% if contrat.datefin %}{{ contrat.datefin|date('Y-m-d') }}{% endif %}</span>
                </div>
            </div>        </fieldset>
    </form>
        <hr>
        <div class="form-group">
    <a class="btn btn-default" href="{{ path('contrats') }}">
        <i class="fa fa-list" aria-hidden="true"></i>
        Back to list
    </a>
            <a class="btn btn-success" href="{{ path('contrats_edit', { 'id':  contrat.id }) }}">
            <i class="fa fa-pencil" aria-hidden="true"></i>
            Edit
        </a>
                <a class="btn btn-primary" href="{{ path('contrats_new') }}">
            <i class="fa fa-plus" aria-hidden="true"></i>
            New
        </a>
                <form action="{{ path('contrats_delete', { 'id': contrat.id }) }}" method="post" style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <i class="fa fa-trash-o"></i> 
                Delete</button>
        </form>
    </div>

</div>
<hr>

{% endblock %}

