{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - users index
{% endblock %}

{% block panel_head %}
    Gestion des utilisateurs
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12 table-responsive">

            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Compte</th>
                        <th>Nom</th>
                        <th>Codepostal</th>
                        <th>Ville</th>
                        <th>Groupe</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.codepostal }}</td>
                            <td>{{ user.ville }}</td>
                            <td>{{ user.group }}</td>
                            <td>    
                                <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('users_by_id_delete', { 'id': user.id}) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a title='show' class="btn btn-success btn-sm" href="{{ path('users_preview', { 'id': user.id }) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('users_edit', { 'id': user.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <a href="{{ path('admin_users_rights', { 'id': user.id }) }}">
                                    <button type="button" class="btn btn-primary">Droits</button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}

