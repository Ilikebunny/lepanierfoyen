{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - user
{% endblock %}

{% block body %}

    <header class="panel-heading">
        <h2> Users</h2>
    </header>
    <div class="panel-body">

        <form class="form form-vertical">
            <fieldset>            <div class="control-group">
                    <label class="col-sm-2 control-label">Id</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ user.id }}</span>
                    </div>
                </div>            <div class="control-group">
                    <label class="col-sm-2 control-label">Nom</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ user.nom }}</span>
                    </div>
                </div>            <div class="control-group">
                    <label class="col-sm-2 control-label">Codepostal</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ user.codepostal }}</span>
                    </div>
                </div>            <div class="control-group">
                    <label class="col-sm-2 control-label">Ville</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ user.ville }}</span>
                    </div>
                </div>            <div class="control-group">
                    <label class="col-sm-2 control-label">Adr1</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ user.adr1 }}</span>
                    </div>
                </div>            <div class="control-group">
                    <label class="col-sm-2 control-label">Adr2</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ user.adr2 }}</span>
                    </div>
                </div>            <div class="control-group">
                    <label class="col-sm-2 control-label">Adr3</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ user.adr3 }}</span>
                    </div>
                </div>            <div class="control-group">
                    <label class="col-sm-2 control-label">Tel</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ user.tel }}</span>
                    </div>
                </div>            <div class="control-group">
                    <label class="col-sm-2 control-label">Mobile</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ user.mobile }}</span>
                    </div>
                </div>            <div class="control-group">
                    <label class="col-sm-2 control-label">Role</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ user.role }}</span>
                    </div>
                </div>            <div class="control-group">
                    <label class="col-sm-2 control-label">Created</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{% if user.created %}{{ user.created|date('Y-m-d H:i:s') }}{% endif %}</span>
                    </div>
                </div>            <div class="control-group">
                    <label class="col-sm-2 control-label">Modified</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{% if user.modified %}{{ user.modified|date('Y-m-d H:i:s') }}{% endif %}</span>
                    </div>
                </div>        </fieldset>
        </form>
        <hr>
        <div class="form-group">
            <a class="btn btn-default" href="{{ path('admin_users') }}">
                <i class="fa fa-list" aria-hidden="true"></i>
                Back to list
            </a>

        </div>

    </div>
    <hr>

{% endblock %}

