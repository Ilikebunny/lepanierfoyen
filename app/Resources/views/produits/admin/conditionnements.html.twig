{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - Modifier conditionnement(s) produit
{% endblock %}

{% block panel_head %}
    Modifier conditionnement(s) produit
{% endblock %}

{% block body %}

    {{ include('flash_message_block.html.twig') }}

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Libelle</th>
                        <th>Prixunitaire</th>
                        <th width = "130px">List</th>
                    </tr>
                </thead>
                <tbody>
                    {% for conditionnement in conditionnements %}
                        <tr>

                            <td><a href="{{ path('conditionnements_show', { 'id': conditionnement.id }) }}">{{ conditionnement.id }}</a></td>
                            <td>{{ conditionnement.libelle }}</td>
                            <td>{{ conditionnement.prixUnitaire }}</td>
                            <td>    <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('conditionnements_by_id_delete', { 'id': conditionnement.id}) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a title='show' class="btn btn-success btn-sm" href="{{ path('conditionnements_show', { 'id': conditionnement.id }) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('conditionnements_edit', { 'id': conditionnement.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>

                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <p>
        <button type="submit" class="btn btn-success"> <i class="fa fa-plus-square-o" aria-hidden="true"></i> Submit</button>
    </p>
    {{ form_end(form) }}

{% endblock %}

{% block aside %}
    <div class="form-group">
        <a class="btn btn-default" href="{{ path('admin_produits') }}">
            <i class="fa fa-list" aria-hidden="true"></i>
            Retour à la liste produits
        </a>
    </div>
    <div class="form-group">
        <a class="btn btn-default" href="{{ path('admin_produits_conditionnements', { 'id': produit.id }) }}">
            <i class="fa fa-list" aria-hidden="true"></i>
            Conditionnement(s)
        </a>
    </div>
    <div class="form-group">
        <a class="btn btn-primary"href="{{ path('produits_new') }}">
            <i class="fa fa-plus"></i>
            Disponibilitée(s)
        </a>
    </div>
{% endblock %}
