{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - Modifier conditionnement(s) produit
{% endblock %}

{% block panel_head %}
    Modifier conditionnement(s) produit
{% endblock %}

{% block aside %}
    {{ include('produits/admin/produit_admin_menu.html.twig') }}
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Prixunitaire</th>
                        <th width = "100px">List</th>
                    </tr>
                </thead>
                <tbody>
                    {% for conditionnement in conditionnements %}
                        <tr>
                            <td>{{ conditionnement.libelle }}</td>
                            <td>{{ conditionnement.prixUnitaire }}</td>
                            <td>    
                                <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('conditionnements_by_id_delete', { 'id': conditionnement.id}) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('conditionnements_edit', { 'id': conditionnement.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <p>
        <button type="submit" class="btn btn-success"> <i class="fa fa-plus-square-o" aria-hidden="true"></i> Submit</button>
    </p>
    {{ form_end(form) }}

{% endblock %}