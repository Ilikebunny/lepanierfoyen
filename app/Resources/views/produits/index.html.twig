{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} - produit index
{% endblock %}

{% block body %}
<header class="panel-heading">
    <h2>Produits list </h2>
</header>
<div class="panel-body">

    <div class="row">
        <div class="col-md-12">
            {% for flash_message in app.session.flashbag.get('error') %}
            <div class="alert alert-error ">
                 {{ flash_message }}
            </div>
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('success') %}
            <div class="alert alert-success ">
                 {{ flash_message }}
            </div>
             {% endfor %}
        </div>
    </div>


    
            <div class="row">
            <div class="col-md-2 form-group pull-right">
                <a class="btn btn-primary likepaginator" href="{{ path('produits_new') }}">
                    <i class="fa fa-plus"></i> New
                </a>
            </div>
        </div>

    
    
        <div class="row">
            <div class="col-md-12">

                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            
                            <th>Id</th>
                            <th>Libelle</th>
                            <th>Descriptif</th>
                            <th width = "130px">List</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for produit in produits %}
                        <tr>
                            
                            <td><a href="{{ path('produits_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                            <td>{{ produit.libelle }}</td>
                            <td>{{ produit.descriptif }}</td>
                            <td>    <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('produits_by_id_delete', { 'id': produit.id}) }}">
        <i class="fa fa-trash-o"></i>
    </a>
<a title='show' class="btn btn-success btn-sm" href="{{ path('produits_show', { 'id': produit.id }) }}">
    <i class="fa fa-eye"></i>
</a>
    <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('produits_edit', { 'id': produit.id }) }}">
        <i class="fa fa-pencil"></i>
    </a>

                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
        
</div>


{% endblock %}

