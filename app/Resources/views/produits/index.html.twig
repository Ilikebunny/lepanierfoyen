{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - produits
{% endblock %}

{% block panel_head %}
    Nos produits
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 table-responsive">

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Producteur</th>
                        <th>Produit</th>
                    </tr>
                </thead>
                <tbody>
                    {% for produit in produits %}
                        <tr>
                            <td>{{ produit.producteur.nom }}</td>
                            <td><a href="{{ path('producteurs_show_slug_produits', { 'slug': produit.producteur.slug }) }}">{{ produit.libelle }}</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}

