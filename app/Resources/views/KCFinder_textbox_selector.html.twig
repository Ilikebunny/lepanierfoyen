<script type="text/javascript">
    function openKCFinder(field) {
        window.KCFinder = {
            callBack: function (url) {
                field.value = url;
                window.KCFinder = null;
                /*Modify Form Element */
                var formhidden = document.getElementById('{{ elementId }}');
                formhidden.value = url;
            }
        };
        window.open('{{ path('kcfinder_browse') }}', 'kcfinder_textbox',
                'status=0, toolbar=0, location=0, menubar=0, directories=0, ' +
                'resizable=1, scrollbars=0, width=800, height=600'
                );
    }
</script>

<input type="text" readonly="readonly" onclick="openKCFinder(this)" value="Cliquez ici pour ajouter un fichier" autocomplete="off" style="width:600px;cursor:pointer" />