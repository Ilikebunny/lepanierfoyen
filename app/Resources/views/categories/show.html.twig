{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - category
{% endblock %}

{% block body %}

    <header class="panel-heading">
        <h2> Categories</h2>
    </header>
    <div class="panel-body">
        <form class="form form-vertical">
            <fieldset>            
                <div class="control-group">
                    <label class="col-sm-2 control-label">Id</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ category.id }}</span>
                    </div>
                </div>            
                <div class="control-group">
                    <label class="col-sm-2 control-label">Libelle</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ category.libelle }}</span>
                    </div>
                </div>            
                <div class="control-group">
                    <label class="col-sm-2 control-label">Logo</label>
                    <div class="col-sm-10">
                        <span class="input-xlarge uneditable-input">{{ category.logo }}</span>
                    </div>
                </div>        
            </fieldset>
        </form>
        <hr>
    </div>
    <hr>

{% endblock %}

