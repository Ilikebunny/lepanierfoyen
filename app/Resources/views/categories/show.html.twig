{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} - category
{% endblock %}

{% block body %}

<header class="panel-heading">
    <h2> Categories</h2>
</header>
<div class="panel-body">

    <form class="form form-vertical">
        <fieldset>            <div class="control-group">
                <label class="col-sm-2 control-label">Id</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ category.id }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Libelle</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ category.libelle }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Logo</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ category.logo }}</span>
                </div>
            </div>        </fieldset>
    </form>
        <hr>
        <div class="form-group">
    <a class="btn btn-default" href="{{ path('categories') }}">
        <i class="fa fa-list" aria-hidden="true"></i>
        Back to list
    </a>
            <a class="btn btn-success" href="{{ path('categories_edit', { 'id':  category.id }) }}">
            <i class="fa fa-pencil" aria-hidden="true"></i>
            Edit
        </a>
                <a class="btn btn-primary" href="{{ path('categories_new') }}">
            <i class="fa fa-plus" aria-hidden="true"></i>
            New
        </a>
                <form action="{{ path('categories_delete', { 'id': category.id }) }}" method="post" style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <i class="fa fa-trash-o"></i> 
                Delete</button>
        </form>
    </div>

</div>
<hr>

{% endblock %}

