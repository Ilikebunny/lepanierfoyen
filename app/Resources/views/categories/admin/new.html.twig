{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - Nouvelle catégorie
{% endblock %}

{% block panel_head %}
    Création de catégorie
{% endblock %}

{% block aside %}
    <div class="form-group">
        <a class="btn btn-default" href="{{ path('admin_categories') }}">
            <i class="fa fa-list" aria-hidden="true"></i>
            Retour à la liste
        </a>
    </div>
{% endblock %}

{% block body %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {% include 'KCFinder_image_selector.html.twig' with {'elementId': 'panierfoyenbundle_categories_logo'} %}
    <br>
    <p>
        <button type="submit" class="btn btn-success"> <i class="fa fa-plus-square-o" aria-hidden="true"></i> Valider</button>
    </p>
    {{ form_end(form) }}

{% endblock %}

