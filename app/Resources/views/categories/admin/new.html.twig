{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - New category
{% endblock %}

{% block body %}
    <header class="panel-heading">
        <h2>New category</h2>
    </header>
    <div class="panel-body">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ include('KCFinder_image_selector.html.twig') }}

        <p>
            <button type="submit" class="btn btn-success"> <i class="fa fa-plus-square-o" aria-hidden="true"></i> Submit</button>
        </p>
        {{ form_end(form) }}

        <div class="form-group">
            <a class="btn btn-default" href="{{ path('admin_categories') }}">
                <i class="fa fa-list" aria-hidden="true"></i>
                Back to list
            </a>
        </div>

    </div>

{% endblock %}

