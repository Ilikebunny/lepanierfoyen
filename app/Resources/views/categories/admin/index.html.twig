{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - categories index
{% endblock %}

{% block panel_head %}
    Gestion des catégories
{% endblock %}

{% block aside %}
    <div class="form-group">
        <a class="btn btn-primary"href="{{ path('categories_new') }}">
            <i class="fa fa-plus"></i>
            Ajouter catégorie
        </a>
    </div>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">

            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Logo</th>
                        <th width = "130px">List</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.libelle }}</td>
                            <td><img class="table_img" src="{{ asset( category.logo) }}" alt="" /></td>
                            <td>    
                                <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('categories_by_id_delete', { 'id': category.id}) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a title='show' class="btn btn-success btn-sm" href="{{ path('categories_show', { 'id': category.id }) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('categories_edit', { 'id': category.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}

