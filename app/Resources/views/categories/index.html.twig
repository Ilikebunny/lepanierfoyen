{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - category index
{% endblock %}

{% block body %}
    <header class="panel-heading">
        <h2>Categories list </h2>
    </header>
    <div class="panel-body">

        <div class="row">
            <div class="col-md-12">
                {% for flash_message in app.session.flashbag.get('error') %}
                    <div class="alert alert-error ">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                {% for flash_message in app.session.flashbag.get('success') %}
                    <div class="alert alert-success ">
                        {{ flash_message }}
                    </div>
                {% endfor %}
            </div>
        </div>



        <div class="row">
            <div class="col-md-2 form-group pull-right">
                <a class="btn btn-primary likepaginator" href="{{ path('categories_new') }}">
                    <i class="fa fa-plus"></i> New
                </a>
            </div>
        </div>



        <div class="row">
            <div class="col-md-12">

                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>

                            <th>Id</th>
                            <th>Libelle</th>
                            <th>Logo</th>
                            <th width = "130px">List</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>

                                <td><a href="{{ path('categories_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                                <td>{{ category.libelle }}</td>
                                <td>{{ category.logo }}</td>
                                <td>    <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('categories_by_id_delete', { 'id': category.id}) }}">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                    <a title='show' class="btn btn-success btn-sm" href="{{ path('categories_show', { 'id': category.id }) }}">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('categories_edit', { 'id': category.id }) }}">
                                        <i class="fa fa-pencil"></i>
                                    </a>

                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>

    </div>


{% endblock %}

