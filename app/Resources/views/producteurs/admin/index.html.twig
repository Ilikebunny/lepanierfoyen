{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - producteur index
{% endblock %}

{% block body %}
    {#    {{ dump() }}#}

    <header class="panel-heading">
        <h2>Producteurs list </h2>
    </header>
    <div class="panel-body">

        <div class="row">
            <div class="col-md-12">
                {% for flash_message in app.session.flashbag.get('error') %}
                    <div class="alert alert-error ">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                {% for flash_message in app.session.flashbag.get('success') %}
                    <div class="alert alert-success ">
                        {{ flash_message }}
                    </div>
                {% endfor %}
            </div>
        </div>



        <div class="row">
            <div class="col-md-2 form-group pull-right">
                <a class="btn btn-primary likepaginator" href="{{ path('producteurs_new') }}">
                    <i class="fa fa-plus"></i> New
                </a>
            </div>
        </div>



        <div class="row">
            <div class="col-md-12">

                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>

                            <th>Id</th>
                            <th>Nom</th>
                            <th>Codepostal</th>
                            <th>Ville</th>
                            <th>Adr1</th>
                            <th>Adr2</th>
                            <th>Adr3</th>
                            <th>Tel</th>
                            <th>Mobile</th>
                            <th>Siteinternet</th>
                            <th>Chequeordre</th>
                            <th>Email</th>
                            <th>Coordinateur</th>
                            <th width = "130px">List</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for producteur in producteurs %}
                            <tr>

                                <td><a href="{{ path('producteurs_show', { 'id': producteur.id }) }}">{{ producteur.id }}</a></td>
                                <td>{{ producteur.nom }}</td>
                                <td>{{ producteur.codepostal }}</td>
                                <td>{{ producteur.ville }}</td>
                                <td>{{ producteur.adr1 }}</td>
                                <td>{{ producteur.adr2 }}</td>
                                <td>{{ producteur.adr3 }}</td>
                                <td>{{ producteur.tel }}</td>
                                <td>{{ producteur.mobile }}</td>
                                <td>{{ producteur.siteInternet }}</td>
                                <td>{{ producteur.chequeOrdre }}</td>
                                <td>{{ producteur.email }}</td>
                                <td>
                                    {% if producteur.coordinateur %}
                                        {{ producteur.coordinateur.nom }}
                                    {% endif %}
                                </td>
                                <td>    <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('producteurs_by_id_delete', { 'id': producteur.id}) }}">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                    <a title='show' class="btn btn-success btn-sm" href="{{ path('producteurs_show', { 'id': producteur.id }) }}">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('producteurs_edit', { 'id': producteur.id }) }}">
                                        <i class="fa fa-pencil"></i>
                                    </a>

                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>

    </div>


{% endblock %}

