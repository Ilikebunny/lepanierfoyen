{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - producteur index
{% endblock %}

{% block panel_head %}
    Producteurs list 
{% endblock %}

{% block aside %}
    <div class="form-group">
        <a class="btn btn-primary"href="{{ path('producteurs_new') }}">
            <i class="fa fa-plus"></i>
            Ajouter producteur
        </a>
    </div>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12 table-responsive">

            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Codepostal</th>
                        <th>Ville</th>
                        <th>Coordinateur</th>
                        <th width = "130px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for producteur in producteurs %}
                        <tr>
                            <td>{{ producteur.nom }}</td>
                            <td>{{ producteur.codepostal }}</td>
                            <td>{{ producteur.ville }}</td>
                            <td>
                                {% if producteur.coordinateur %}
                                    {{ producteur.coordinateur.nom }}
                                {% endif %}
                            </td>
                            <td>    
                                <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('producteurs_by_id_delete', { 'id': producteur.id}) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a title='show' class="btn btn-success btn-sm" href="{{ path('producteurs_show', { 'id': producteur.id }) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('producteurs_edit', { 'id': producteur.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}

