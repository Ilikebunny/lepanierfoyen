{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - producteur
{% endblock %}

{% block body %}

    {% include 'producteurs/navTab.html.twig' %}

    <div class="panel-body">
        {{ dump() }}
        <hr>

        <section class="row">
            {% for gallery in producteur.myGallery %}
                <div class="col-xs-4 col-sm-3 col-md-2">
                    <img class="gallery_img" src="{{ asset( gallery.image) }}" alt="{{ gallery.id}}" />
                </div>
            {% endfor %}
        </section>

        <hr>
    </div>
    <hr>

{% endblock %}

