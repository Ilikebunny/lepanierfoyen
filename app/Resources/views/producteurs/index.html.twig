{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - producteur index
{% endblock %}

{% block panel_head %}
    Producteurs list 
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12 table-responsive">

            <table class="table table-condensed table-responsive">
                <thead>
                    <tr>
                        <th>Production</th>
                        <th>Nom</th>
                        <th>Localisation</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for producteur in producteurs %}
                        <tr>
                            <td>
                                {% for categorie in producteur.category %}
                                    <img class="table_img" src="{{ asset( categorie.logo) }}" alt="{{ categorie.libelle}}" />
                                {% endfor %}
                            </td>
                            <td>{{ producteur.nom }}</td>
                            <td>{{ producteur.codepostal ~ ' ' ~ producteur.ville }}</td>
                            <td>  
                                <a title='show' class="btn btn-success btn-sm" href="{{ path('producteurs_show_slug', { 'slug': producteur.slug }) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}

{% block aside %}
    {{ include('producteurs/categories_filter.html.twig') }} 
{% endblock %}