{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - producteur index
{% endblock %}

{% block body %}
{#    {{ dump() }}#}

    <header class="panel-heading">
        <h2>Producteurs list </h2>
    </header>
    <div class="panel-body">

        <div class="row">
            <div class="col-md-12">

                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Codepostal</th>
                            <th>Ville</th>
                            <th>Adr1</th>
                            <th>Adr2</th>
                            <th>Adr3</th>
                            <th>Tel</th>
                            <th>Mobile</th>
                            <th>Siteinternet</th>
                            <th>Chequeordre</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for producteur in producteurs %}
                            <tr>
                                <td><a href="{{ path('producteurs_show', { 'id': producteur.id }) }}">{{ producteur.id }}</a></td>
                                <td>{{ producteur.nom }}</td>
                                <td>{{ producteur.codepostal }}</td>
                                <td>{{ producteur.ville }}</td>
                                <td>{{ producteur.adr1 }}</td>
                                <td>{{ producteur.adr2 }}</td>
                                <td>{{ producteur.adr3 }}</td>
                                <td>{{ producteur.tel }}</td>
                                <td>{{ producteur.mobile }}</td>
                                <td>{{ producteur.siteInternet }}</td>
                                <td>{{ producteur.chequeOrdre }}</td>
                                <td>{{ producteur.email }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>

    </div>


{% endblock %}

