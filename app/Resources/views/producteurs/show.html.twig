{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - producteur
{% endblock %}

{% block panel_head %}
    {% include 'producteurs/Panel_producteur.html.twig' %}
{% endblock %}

{% block menu_content %}
    {% include 'producteurs/navTab.html.twig' %}
{% endblock %}

{% block body %}

    <div class="row">
        <div class=" col-md-6">
            <div class=" col-md-12">{{ producteur.nom }}</div>
            <div class=" col-md-12">{{ producteur.codepostal }} {{ producteur.ville }}</div>
            <div class=" col-md-12">{{ producteur.adr1 }}</div>
            <div class=" col-md-12">{{ producteur.adr2 }}</div>
            <div class=" col-md-12">{{ producteur.adr3 }}</div>
        </div>
        <div class=" col-md-6">
            <div class=" col-md-12">{{ producteur.tel }}</div>
            <div class=" col-md-12">{{ producteur.mobile }}</div>
            <div class=" col-md-12">{{ producteur.email }}</div>
            <div class=" col-md-12"><a href="http://{{ producteur.siteInternet}}">{{ producteur.siteInternet }}</a></div>
        </div>
    </div>

    <div class="row">
        <br>
    </div>

    <div class="row">
        <div class=" col-md-12">
            {{ producteur.presentation  | raw  }}
        </div>
    </div>

    <hr>

{% endblock %}

