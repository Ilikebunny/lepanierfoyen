{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - frequence index
{% endblock %}

{% block panel_head %}
    Gestion des fréquences
{% endblock %}

{% block aside %}
    <div class="form-group">
        <a class="btn btn-primary"href="{{ path('frequences_new') }}">
            <i class="fa fa-plus"></i>
            Ajouter fréquence
        </a>
    </div>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">

            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Jours</th>
                        <th class="action_column">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for frequence in frequences %}
                        <tr>
                            <td>{{ frequence.libelle }}</td>
                            <td>{{ frequence.jours }}</td>
                            <td>
                                <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('frequences_by_id_delete', { 'id': frequence.id}) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a title='show' class="btn btn-success btn-sm" href="{{ path('frequences_show', { 'id': frequence.id }) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('frequences_edit', { 'id': frequence.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}

