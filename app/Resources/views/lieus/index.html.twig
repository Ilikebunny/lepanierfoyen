{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - Gestion des lieux
{% endblock %}

{% block panel_head %}
    Gestion des lieux
{% endblock %}

{% block aside %}
    <div class="form-group">
        <a class="btn btn-primary"href="{{ path('lieus_new') }}">
            <i class="fa fa-plus"></i>
            Ajouter lieu
        </a>
    </div>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">

            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Adr1</th>
                        <th>Adr2</th>
                        <th>Adr3</th>
                        <th>Codepostal</th>
                        <th>Ville</th>
                        <th class = "action_column">List</th>
                    </tr>
                </thead>
                <tbody>
                    {% for lieus in lieuses %}
                        <tr>
                            <td>{{ lieus.libelle }}</td>
                            <td>{{ lieus.adr1 }}</td>
                            <td>{{ lieus.adr2 }}</td>
                            <td>{{ lieus.adr3 }}</td>
                            <td>{{ lieus.codepostal }}</td>
                            <td>{{ lieus.ville }}</td>
                            <td>    
                                <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('lieus_by_id_delete', { 'id': lieus.id}) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a title='show' class="btn btn-success btn-sm" href="{{ path('lieus_show', { 'id': lieus.id }) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('lieus_edit', { 'id': lieus.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>

                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}

