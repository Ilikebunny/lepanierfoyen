        {#            <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/fullcalendar.default-settings.js') }}"></script>#}
        <script src="{{ asset('js/fullcalendar/fullcalendar.default-settings.js') }}"></script>
        <script src="{{ asset('js/fullcalendar/lang/fr.js') }}"></script>
