{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} - article
{% endblock %}

{% block body %}

<header class="panel-heading">
    <h2> Articles</h2>
</header>
<div class="panel-body">

    <form class="form form-vertical">
        <fieldset>            <div class="control-group">
                <label class="col-sm-2 control-label">Id</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ article.id }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Titre</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ article.titre }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Contenue</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ article.contenue }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Publicationdate</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{% if article.publicationDate %}{{ article.publicationDate|date('Y-m-d H:i:s') }}{% endif %}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Modified</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{% if article.modified %}{{ article.modified|date('Y-m-d H:i:s') }}{% endif %}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Created</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{% if article.created %}{{ article.created|date('Y-m-d H:i:s') }}{% endif %}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Slug</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ article.slug }}</span>
                </div>
            </div>        </fieldset>
    </form>
        <hr>
        <div class="form-group">
    <a class="btn btn-default" href="{{ path('articles') }}">
        <i class="fa fa-list" aria-hidden="true"></i>
        Back to list
    </a>
            <a class="btn btn-success" href="{{ path('articles_edit', { 'id':  article.id }) }}">
            <i class="fa fa-pencil" aria-hidden="true"></i>
            Edit
        </a>
                <a class="btn btn-primary" href="{{ path('articles_new') }}">
            <i class="fa fa-plus" aria-hidden="true"></i>
            New
        </a>
                <form action="{{ path('articles_delete', { 'id': article.id }) }}" method="post" style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <i class="fa fa-trash-o"></i> 
                Delete</button>
        </form>
    </div>

</div>
<hr>

{% endblock %}

