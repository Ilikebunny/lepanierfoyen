{% for article in recent_articles %}
    <div class="col-md-6">
        <a href="/article/{{ article.slug }}">
            {{ article.titre }}
        </a>
    </div>
    <div class="col-md-6">
        <span  class="label label-primary">
            {{ article.tag[0].title }}
        </span>
    </div>
{% endfor %}