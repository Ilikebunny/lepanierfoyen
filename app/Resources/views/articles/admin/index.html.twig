{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - article index
{% endblock %}

{% block panel_head %}
    Articles list
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            {% for flash_message in app.session.flashbag.get('error') %}
                <div class="alert alert-error ">
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('success') %}
                <div class="alert alert-success ">
                    {{ flash_message }}
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 form-group pull-right">
            <a class="btn btn-primary likepaginator" href="{{ path('articles_new') }}">
                <i class="fa fa-plus"></i> New
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>

                        <th>Id</th>
                        <th>Titre</th>
                        <th>Publicationdate</th>
                        <th>Modified</th>
                        <th>Created</th>
                        <th>Slug</th>
                        <th width = "130px">List</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>

                            <td><a href="{{ path('articles_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                            <td>{{ article.titre }}</td>
                            <td>{% if article.publicationDate %}{{ article.publicationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{% if article.modified %}{{ article.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{% if article.created %}{{ article.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{{ article.slug }}</td>
                            <td>    <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('articles_by_id_delete', { 'id': article.id}) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a title='show' class="btn btn-success btn-sm" href="{{ path('articles_show', { 'id': article.id }) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('articles_edit', { 'id': article.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>

                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
    {{ pagerHtml | raw}}

{% endblock %}

