{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} - tag index
{% endblock %}

{% block body %}
<header class="panel-heading">
    <h2>Tags list </h2>
</header>
<div class="panel-body">

    <div class="row">
        <div class="col-md-12">
            {% for flash_message in app.session.flashbag.get('error') %}
            <div class="alert alert-error ">
                 {{ flash_message }}
            </div>
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('success') %}
            <div class="alert alert-success ">
                 {{ flash_message }}
            </div>
             {% endfor %}
        </div>
    </div>


    
            <div class="row">
            <div class="col-md-2 form-group pull-right">
                <a class="btn btn-primary likepaginator" href="{{ path('tags_new') }}">
                    <i class="fa fa-plus"></i> New
                </a>
            </div>
        </div>

    
    
        <div class="row">
            <div class="col-md-12">

                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            
                            <th>Id</th>
                            <th>Title</th>
                            <th>Created</th>
                            <th>Modified</th>
                            <th width = "130px">List</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for tag in tags %}
                        <tr>
                            
                            <td><a href="{{ path('tags_show', { 'id': tag.id }) }}">{{ tag.id }}</a></td>
                            <td>{{ tag.title }}</td>
                            <td>{% if tag.created %}{{ tag.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{% if tag.modified %}{{ tag.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>    <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('tags_by_id_delete', { 'id': tag.id}) }}">
        <i class="fa fa-trash-o"></i>
    </a>
<a title='show' class="btn btn-success btn-sm" href="{{ path('tags_show', { 'id': tag.id }) }}">
    <i class="fa fa-eye"></i>
</a>
    <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('tags_edit', { 'id': tag.id }) }}">
        <i class="fa fa-pencil"></i>
    </a>

                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
        
</div>


{% endblock %}

