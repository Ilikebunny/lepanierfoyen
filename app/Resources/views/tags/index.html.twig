{% extends 'layout.admin.html.twig' %}

{% block title %}
    {{ parent() }} - tag index
{% endblock %}

{% block panel_head %}
    Gestion des tags
{% endblock %}

{% block aside %}
    <div class="form-group">
        <a class="btn btn-primary"href="{{ path('tags_new') }}">
            <i class="fa fa-plus"></i>
            Ajouter tag
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 table-responsive">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th width = "130px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tag in tags %}
                        <tr>
                            <td>{{ tag.title }}</td>
                            <td>    
                                <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('tags_by_id_delete', { 'id': tag.id}) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a title='show' class="btn btn-success btn-sm" href="{{ path('tags_show', { 'id': tag.id }) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a  title='edit' class="btn btn-primary btn-sm" href="{{ path('tags_edit', { 'id': tag.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>

                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

