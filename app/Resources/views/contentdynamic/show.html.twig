{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} - contentDynamic
{% endblock %}

{% block body %}

    <form class="form form-vertical">
        <fieldset>            <div class="control-group">
                <label class="col-sm-2 control-label">Id</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ contentDynamic.id }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Titre</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ contentDynamic.titre }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Contenue</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ contentDynamic.contenue }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Summary</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ contentDynamic.summary }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Order</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ contentDynamic.order }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Published</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{% if contentDynamic.published %}Yes{% else %}No{% endif %}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Publicationdate</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{% if contentDynamic.publicationDate %}{{ contentDynamic.publicationDate|date('Y-m-d H:i:s') }}{% endif %}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Modified</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{% if contentDynamic.modified %}{{ contentDynamic.modified|date('Y-m-d H:i:s') }}{% endif %}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Created</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{% if contentDynamic.created %}{{ contentDynamic.created|date('Y-m-d H:i:s') }}{% endif %}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Slug</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ contentDynamic.slug }}</span>
                </div>
            </div>        </fieldset>
    </form>
        <hr>

{% endblock %}

